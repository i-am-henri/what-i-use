---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import picture from "../../public/lol.jpg";
---

<Layout title="PC">


    <h2 class="TextH2">Mein PC:</h2>
    <img src={picture} class="Image"/>
    <div class="CardWrapper">
      <div class="GridCard">
        <Card
          title="PC"
          body="Ich habe mir einen sehr guten, aber auch noch Presiwerten PC selber gebaut."
          href="/pc"
        />
        <Card
          title="Monitor"
