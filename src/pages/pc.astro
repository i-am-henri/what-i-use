  </Layout>
  
  <style>
    .GridCard {
      display: grid;
      width: 80%;
      gap: 5%;
      grid-template-columns: 2fr 2fr;
      padding: 0;
    }
    .CardWrapper {
      width: 100%;
      display: flex;
      justify-content: center;
    }
    .TextH2 {
      text-align: center;
    }
    @media (max-width: 850px) {
      .GridCard {
        gap: 10%;
      }
    }
    @media (max-width: 700px) {
      .GridCard {
        display: flex;
        flex-direction: column;
        margin-bottom: 5%;
        justify-content: center;
      }
