import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <h2 class="textH2">Folgende Produkte benutze ich:</h2>
    <div class="GridCard"></div>
  </main>
</Layout>

<style>
  .GridCard {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(40%, 5%));
    gap: 1rem;
    padding: 0;
  }
  .TextH2 {
    text-align: center;
  }
</style>
